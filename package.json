{
  "name": "paperlib",
  "version": "3.1.6",
  "main": "dist/main/main.mjs",
  "description": "A simple academic paper management tool.",
  "author": "Future Scholars <hi@paperlib.app>",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "dev": "electron-vite dev -w",
    "typecheck:app": "tsc --noEmit -p ./app/tsconfig.json --composite false",
    "typecheck:main": "tsc --noEmit -p ./app/main/tsconfig.json --composite false",
    "typecheck:extension": "tsc --noEmit -p ./app/extension/tsconfig.json --composite false",
    "typecheck": "vue-tsc --noEmit -p ./app/renderer/tsconfig.json --composite false && tsc --noEmit -p ./app/service/tsconfig.json --composite false && tsc --noEmit -p ./app/main/tsconfig.json --composite false  && tsc --noEmit -p ./app/preload/tsconfig.json --composite false",
    "build-mac-arm": "vue-tsc --noEmit && vite build && electron-builder --config ./build_configs/electron-builder.mac.arm.json5",
    "build-mac-x86": "vue-tsc --noEmit && vite build && electron-builder --config ./build_configs/electron-builder.mac.json5",
    "build-win": "vue-tsc --noEmit && vite build && electron-builder --config ./build_configs/electron-builder.win.json5",
    "build-linux": "vue-tsc --noEmit && vite build && electron-builder --config ./build_configs/electron-builder.linux.json5",
    "build-mac-arm-dev": "vue-tsc --noEmit && vite build && electron-builder --config ./build_configs/electron-builder.mac.arm.dev.json5",
    "build-mac-x86-dev": "vue-tsc --noEmit && vite build && electron-builder --config ./build_configs/electron-builder.mac.dev.json5",
    "build-win-dev": "vue-tsc --noEmit && vite build && electron-builder --config ./build_configs/electron-builder.win.dev.json5",
    "build-linux-dev": "vue-tsc --noEmit && vite build && electron-builder --config ./build_configs/electron-builder.linux.dev.json5",
    "dev-build": "vite build && electron-builder --config ./build_configs/electron-builder.mac.arm.json5",
    "test:e2e": "vue-tsc --noEmit && vite build && vitest run",
    "test:e2e-dev": "vite build && vitest run",
    "generate:api-types": "vite build --config ./app/api/vite.config.ts",
    "generate:public-api-types": "vite build --config ./paperlib-api/vite.config.ts"
  },
  "engines": {
    "node": ">=20.14.0"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@future-scholars/vue-virtual-scroller": "^1.0.0",
    "@headlessui/vue": "1.5.0",
    "@types/katex": "0.14.0",
    "@types/lodash": "^4.17.6",
    "@types/markdown-it": "12.2.3",
    "@types/splitpanes": "2.2.1",
    "@types/tough-cookie": "4.0.2",
    "@types/ws": "8.5.3",
    "@vitejs/plugin-vue": "4.6.2",
    "@vueuse/core": "^10.11.0",
    "autoprefixer": "10.4.4",
    "bootstrap-icons-vue": "1.11.1",
    "bson": "4.6.3",
    "citation-js": "0.6.4",
    "cssnano": "5.1.7",
    "electron": "31.1.0",
    "electron-builder": "23.6.0",
    "electron-log": "4.4.8",
    "electron-store": "8.1.0",
    "electron-vite": "^2.3.0",
    "eventemitter3": "^5.0.1",
    "fast-xml-parser": "4.0.6",
    "graph-data-structure": "3.5.0",
    "graphology": "0.25.4",
    "ky": "1.2.2",
    "lockfile": "^1.0.4",
    "lodash": "^4.17.21",
    "markdown-it": "13.0.1",
    "markdown-it-texmath": "1.0.0",
    "mathml-to-latex": "1.2.0",
    "md5-file": "5.0.0",
    "p-timeout": "6.1.2",
    "pdfjs-dist": "4.0.269",
    "pinia": "2.1.7",
    "playwright": "1.40.0",
    "postcss": "8.4.33",
    "prettier": "2.8.8",
    "prettier-plugin-organize-imports": "3.2.4",
    "screenshot-desktop": "1.14.0",
    "splitpanes": "3.1.1",
    "tailwindcss": "3.4.1",
    "toad-scheduler": "1.6.0",
    "tough-cookie": "4.0.0",
    "tslib": "2.5.3",
    "typescript": "5.1.3",
    "undici": "6.7.0",
    "vite": "5.3.3",
    "vite-plugin-dts": "3.7.0",
    "vite-plugin-electron": "0.28.7",
    "vite-plugin-electron-renderer": "0.14.5",
    "vitest": "1.1.3",
    "vue": "3.4.31",
    "vue-i18n": "9.13.1",
    "vue-tsc": "2.0.24",
    "vue-word-highlighter": "^1.2.4",
    "vuedraggable": "4.1.0",
    "watcher": "^2.3.0",
    "webdav": "5.3.1"
  },
  "dependencies": {
    "electron-updater": "6.2.1",
    "katex": "0.16.2",
    "keytar": "7.9.0",
    "mupdf": "^0.2.2",
    "realm": "11.10.2",
    "ws": "8.6.0"
  },
  "keywords": [
    "academic",
    "paper",
    "management"
  ]
}