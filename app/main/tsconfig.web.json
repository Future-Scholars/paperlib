{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "./**/*",
    "../base/**/*",
    "../common/**/*",
    "../locales/**/*",
    "../models/**/*",
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": "../",
    "rootDir": "../",
    "paths": {
      "@/*": ["./*"]
    },
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "moduleResolution": "Bundler"
  }
}
